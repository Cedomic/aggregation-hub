{
  "compilerOptions": {
    "watch": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "./src/types/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types/*"]
  },
  "include": ["src/**/*"]
}
